extends layouts/main.pug
include mixins/videoBlock.pug

block content
    .search
        .search__header
            if videos.length === 0
                h3 No Videos Found
            else
                h3 Searching for: #{searchingBy}
        each item in videos
            +videoBlock({
                id:item.id,
                title:item.title,
                views:item.views,
                createdAt: item.createdAt,
                videoFile:item.fileUrl,
                imgFile:item.creator.avatarUrl,
                name:item.creator.name,
                creator:item.creator.id
            })