mixin commentBlock(comment ={})
    li.comment__block
        .comment__left
            img.comment__publish-avatar(src=`${comment.creator.avatarUrl}`)
        .comment__right
            .comment__info
                a.comment__writer(href=routes.userDetail(comment.creator.id))
                    span.comment__writer-name=comment.creator.name
                span.comment__createdAt=comment.createdAt
            .comment__content
                span.comment__publish=comment.text
            .comment__subinfo
                span.comment__heart
                    i.fas.fa-heart
                    span.comment__heart-number 0
                span.comment__reply
                    i.fas.fa-reply
                if loggedUser && loggedUser.id === comment.creator.id
                    span.comment__edit
                        i.far.fa-edit
                    span.comment__delete
                        i.far.fa-trash-alt