mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__Bar
            .videoPlayer__progressBar#jsProgressBarFilled
                .videoPlayer__filled#jsFilledBar
            .videoPlayer__controls
                .videoPlayer__column
                    span
                        i.fas.fa-backward
                    span#jsPlayButton
                        i.fas.fa-play
                    span
                        i.fas.fa-forward
                    span
                        span#currentTime|00:00:00 
                        | / 
                        sapn#totalTime 00:00:00
                .videoPlayer__column
                    span#jsVolumeButton
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.01" value="1")
                    span#jsFullScreen
                        i.fas.fa-expand
