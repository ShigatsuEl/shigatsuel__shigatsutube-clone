mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-backward
                span#jsPlayButton
                    i.fas.fa-play
                span
                    i.fas.fa-forward
                span
                    span#currentTime|00:00:00 
                    |/ 
                    sapn#totalTime 00:00:00
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span#jsFullScreen
                    i.fas.fa-expand
