mixin videoPlayer(video={})
    .videoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-backward
                    i.fas.fa-play
                    i.fas.fa-forward
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
                    i.fas.fa-expand