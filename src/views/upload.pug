extends layouts/mainGrey.pug

block content
    .form-container
        .record-container#jsRecordContainer
            h2 Upload Video
            video#jsVideoPreview 
            button#jsRecordBtn Start Recording
        form(action=`/videos${routes.upload}`, id="upload-form" method="post", enctype="multipart/form-data")
            label(for="thumbnailFile") Video
            input(type="file", id="jsVideoFile", name="videoFile", required=true, accept="video/*")
            label(for="thumbnailFile") Thumbnail
            input(type="file", id="jsThumbnailFile", name="thumbnailFile", required=true, accept="image/*")
            input(type="text", name="title", placeholder="Title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", id="form-submit" value="Upload Video")
        